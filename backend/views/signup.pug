extends base 

block content 
    main.main 
        .login-form 
            h2.heading-secondary.ma-bt-lg Sign up for an account 
            form.form.sign-up
                .form__group 
                    label.form__label(for='name') Username 
                    input#name.form__input(type='text', autocomplete='on', placeholder='enter username', required)
                .form__group 
                    label.form__label(for='email') Email address 
                    input#email.form__input(type='email', autocomplete='on', placeholder='you@example.com', required)
                .form__group.ma-bt-md 
                    label.form__label(for='password') Password 
                    input#password.form__input(type='password', autocomplete='on', placeholder='*********', required, minlength='8')
                .form__group.ma-bt-md 
                    label.form__label(for='confirm_password') Confirm Password 
                    input#confirm_password.form__input(type='password', autocomplete='on', placeholder='*********', required, minlength='8')
                .form__group 
                    button.btn.btn--green Sign up